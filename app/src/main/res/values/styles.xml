<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Covid19TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="font">@font/proxima_nova_regular</item>
    </style>

    <style name="Covid19TextView.Body" parent="Covid19TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Covid19TextView.Body.Semibold" parent="Covid19TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Covid19TextView.Body.Bold" parent="Covid19TextView.Body">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="font">@font/proxima_nova_bold</item>
    </style>

    <style name="Covid19TextView.Head.Title" parent="Covid19TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="font">@font/proxima_nova_bold</item>
    </style>

    <style name="Covid19TextView.Body.Title" parent="Covid19TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="font">@font/proxima_nova_bold</item>
    </style>

    <style name="Covid19TextView.Body.Paragraph" parent="Covid19TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Covid19TextView.Body.Small" parent="Covid19TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Covid19TransparentImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_circle_white_transparent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Covid19MaterialButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetIndicator">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/ic_bottom_sheet_indicator</item>
    </style>

</resources>
