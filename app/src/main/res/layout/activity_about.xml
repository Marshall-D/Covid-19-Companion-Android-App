<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutActivity"
    android:background="#F4F4F4">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="95dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_logo_full"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/descriptionTV"
                style="@style/Covid19TextView.Body.Paragraph"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin sapien, pharetra, vitae eu, amet, pulvinar scelerisque et neque. At tellus, in faucibus auctor. Viverra ligula arcu, consequat scelerisque feugiat non. Et viverra massa nisi, tellus."
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:layout_marginTop="40dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/resourcesTV"
                style="@style/Covid19TextView.Body.Bold"
                android:text="@string/resources"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:layout_width="match_parent"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resourcesRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_resource"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/developmentTeamTV"
                style="@style/Covid19TextView.Body.Bold"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:text="@string/development_team"
                android:textColor="@color/black"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/releasesTV"
                style="@style/Covid19TextView.Body.Bold"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:text="@string/releases"
                android:textColor="@color/black"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/versionTV"
        style="@style/Covid19TextView.Body.Small"
        android:layout_width="match_parent"
        android:text="Ver 1.0.0"
        android:textColor="@color/white"
        android:background="#C4C4C4"
        android:layout_gravity="bottom"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</FrameLayout>