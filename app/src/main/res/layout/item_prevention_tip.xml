<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/preventionTipTitleTV"
        style="@style/Covid19TextView.Body.Bold"
        tools:text="Wash your hands frequently"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/preventionTipTV"
        android:layout_width="match_parent"
        style="@style/Covid19TextView.Body"
        tools:text="Regularly and thoroughly clean your hands with an alcohol-based hand rub or wash them with soap and water."
        android:textColor="@color/grey"
        android:layout_marginTop="11dp"/>

    <TextView
        android:layout_width="match_parent"
        style="@style/Covid19TextView.Body"
        android:text="@string/why"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/preventionTipWhyTV"
        android:layout_width="match_parent"
        style="@style/Covid19TextView.Body"
        tools:text="Washing your hands with soap and water or using alcohol-based hand rub kills viruses that may be on your hands."
        android:textColor="@color/grey"/>

</LinearLayout>