<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/versionNameTV"
        style="@style/Covid19TextView.Body.Title"
        tools:text="Version 1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/newReleaseIV"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_oval_red"
        app:layout_constraintStart_toEndOf="@id/versionNameTV"
        app:layout_constraintTop_toTopOf="@id/versionNameTV"
        app:layout_constraintBottom_toBottomOf="@id/versionNameTV"
        android:layout_marginStart="6dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/versionDetails"
        style="@style/Covid19TextView.Body"
        android:layout_width="0dp"
        tools:text="@string/lorem_ipsum_quote"
        app:layout_constraintTop_toBottomOf="@id/versionNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>